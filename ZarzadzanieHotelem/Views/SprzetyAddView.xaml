<UserControl x:Class="ZarzadzanieHotelem.Views.SprzetyAddView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZarzadzanieHotelem.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
         <StackPanel>
            <StackPanel x:Name="IdStack">
                <TextBlock><Run Text="Id"/></TextBlock>
                <TextBox Height="23" TextWrapping="Wrap" Text="" x:Name="SprzetyAddId"/>
            </StackPanel>
            <TextBlock><Run Text="Nazwa"/></TextBlock>
              <TextBox Height="23" TextWrapping="Wrap" Text="" x:Name="SprzetyAddNazwa"/>
              <TextBlock><Run Text="Ilość"/></TextBlock>
              <TextBox Height="23" TextWrapping="Wrap" Text="" x:Name="SprzetyAddIlosc"/>
            <Button x:Name="SprzetyAddModBtn" Content="Dodaj" Click="SprzetyAddModBtn_Click"/>
         </StackPanel>
    </Grid>
</UserControl>
